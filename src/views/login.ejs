<%- include('includes/head'); %>
<%- include('includes/nav'); %>
<div class="conetiner">
  <div class="row">
<div class="col-lg-2"></div>

<div class="col-lg-8 my-3">
  <h1 class="text-center">Criar conta ou Entrar</h1>
  <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
  
  <%- include('includes/messages.ejs');%>

  <div class="row">
  
    <div class="col-lg my-5">
       <h4>Faça seu cadastro</h4> 

       <p>Se você não tem conta, preencha o formulario abaixo: </p>

        <form  class="form-cadastro" action="/login/register" method="POST" >
       <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <div class="form-group">

        <label>Seu e-email</label>
        
        <input type="email" class="form-control" autocomplete="current-password" name="email">
        </div>
      <div class="form-group">
        <label>Sua senha</label>
        <input type="password" class="form-control" autocomplete="current-password" name="password">
      </div>
      <button type="submit" class="btn btn-success">Criar conta</button>
    </form>
  </div>
  <div class="col-lg my-5">
    <h4>Entrar no sistema</h4> 

    
    <p>Preencha para Entrar: </p>
    
    <form class="form-login" action="/login/login" method="POST" >
      <input type="hidden" name="_csrf" value=<%= csrfToken %>>
      <div class="form-group">
        <label>Seu e-email</label>
        <input type="email" class="form-control" autocomplete="current-password" name="email">
        </div>
      <div class="form-group">
        <label>Sua senha</label>
        <input type="password" class="form-control" autocomplete="current-password" name="password">
      </div>
      <button type="submit" class="btn btn-success">Entrar</button>
    </form>
  </div>
</div>




<div class="col-lg-2"></div>
</div>
</div>


  <%- include('includes/footer'); %>       